<%= simple_form_for(@app, :html => { :class => "form-horizontal new-form" } ) do |f| %>
  <legend>Create A New App Listing</legend>

  <%= f.input :name, label: "App Name" %>
  <%= f.input :url, label: "URL" %>
  <%= f.input :code_url, label: "Source URL" %>
  <%= f.input :email, label: "Your Email" %>
  <%= f.input :description, as: :text, label: "Description", :input_html => {:size => "50x5", :class => "span8"} %>

  <%= f.button :submit %>

<% end %>

