<%= simple_form_for([@app,@app.comments.build],
:html => { :class => "form-horizontal new-form" }) do |f| %>

  <legend>Create New Comment</legend>


  <%= f.input :first_name, label: "First Name" %>
  <%= f.input :last_name, label: "Last Name" %>
  <%= f.input :email, label: "Your Email" %>
  <%= f.input :content, as: :text, label: "Content", :input_html => {:size => "50x5", :class => "span8"} %>

  <%= f.button :submit, label: "Add New Comment" %>

<% end %>