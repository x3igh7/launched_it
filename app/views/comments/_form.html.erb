<%= simple_form_for([@app,@app.comments.build],
:html => { :class => "new-form-comments" }) do |f| %>

  <div class="comment-form-legend">
    <a name="comments"><legend>Create New Comment</legend></a> 
  </div>

  <div class="comment-form-fields-wrapper">
    <%= f.input :first_name, required: false %>
    <%= f.input :last_name, required: false %>
    <%= f.input :email, required: false %>
    <%= f.input :content, as: :text, :input_html => {size: "50x5"}, required: false %>
  </div>

  <div class="comment-button-wrapper">
    <%= f.button :submit, "Add New Comment" %>
  </div>

<% end %>
